<div class="center jumbotron">
  <h1>Restore your Data</h1>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">

<div class="row">
  <div class="col-md-12 col-md-offset-0">
    <%= form_for(@user=User.new) do |f| %>

      <%= f.label :Mysql_Server_HostName %>
      <%= f.text_field :host, class: 'form-control' %>

      <%= f.label :Mysql_Server_UserName %>
      <%= f.text_field :u, class: 'form-control' %>

      <%= f.label :Mysql_Server_Password %>
      <%= f.password_field :p, class: 'form-control' %>


  </div>
      <%= f.submit "Submit", name:"restore" ,class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

  </div>
</div>