<div class="center jumbotron">
  <h1>Restore your Data</h1>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">

  <div class="row">
  <div class="col-md-12 col-md-offset-0">
    <%= form_for(@user) do |f| %>

      <div class = "orb">
      <%= f.label :Database_to_Use%>
	    <%= f.select :d , @result.rows, :required => true%>  

      <%= f.label :SQL_File_To_Restore%>
      <%= f.file_field :dir, :required => true , :accept=>".sql"%>      
      </div>
  </div>
      <div class = "orb">
      <%= f.submit "Submit", name:"add_res_db" ,class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  </div>

  </div>
</div>