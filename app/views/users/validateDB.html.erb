<div class="center jumbotron">
  <h1>Validate your Data</h1>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">

<div class="row">
  <div class="col-md-12 col-md-offset-0">
    <%= form_for(@user) do |f| %>

      <div class = "orb">
      <%= f.label :Database_to_Use%>
	    <%= f.select :d , @result.rows, :required => true%>       

      <% if @user[:all] == 1 %>
      <%= f.label :Checksum_File_To_Use%>
      <%= f.file_field :t, :required => true, :accept=>".txt"%>
      <% end %>
      </div>
  </div>
      <%= f.submit "Submit", name:"validate_db" ,class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

  </div>
</div>