<div class="center jumbotron">
  <h1>Validate your Data</h1>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">

  <div class="row">
  <div class="col-md-12 col-md-offset-0">
    <%= form_for(@user=User.new) do |f| %>
      <div class = "orb">
      <%= f.label :Mysql_Server_HostName %>
      <%= f.text_field :host, :required => true,  class: 'form-control' %>

      <%= f.label :Mysql_Server_UserName %>
      <%= f.text_field :u, :required => true, class: 'form-control' %>

      <%= f.label :Mysql_Server_Password %>
      <%= f.password_field :p, :required => true, class: 'form-control' %>
      </div>
      <div class = "rb">
      <%= f.label :Validate_What? %><br />
      <%= f.radio_button :all, 1 %> Individual_Database
      <%= f.radio_button :all, 2 %> Individual_Table
      <%= f.radio_button :all, 3, :checked => true %> Validate_a_File </br>  
      </div> 

      </div>
      <div class = "orb">
      <%= f.submit "Submit", name:"validate" ,class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

  </div>
</div>