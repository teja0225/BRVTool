<div class="center jumbotron">
  <h1>Restore your Data</h1>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">

  <div class="row">
  <div class="col-md-12 col-md-offset-0">
    <%= form_for(@user=User.new) do |f| %>
      <div class = "orb">
      <%= f.label :Mysql_Server_HostName %>
      <%= f.text_field :host, class: 'form-control', :required => true %>

      <%= f.label :Mysql_Server_UserName %>
      <%= f.text_field :u, class: 'form-control',:required => true %>

      <%= f.label :Mysql_Server_Password %>
      <%= f.password_field :p, class: 'form-control',:required => true %>
      </div>

      </div>
      <div class = "orb">
      <%= f.submit "Submit", name:"restore" ,class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  </div>

  </div>
</div>